<h1>Work Sessions</h1>

<table class="w3-table-all w3-hoverable">
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_sessions.each do |work_session| %>
      <tr>
        <td><%= work_session.start %></td>
        <td><%= work_session.end %></td>
        <td><%= work_session.task_id %></td>
        <td><%= link_to 'Show', work_session, class:"w3-btn-small w3-round-xxlarge w3-deep-orange w3-margin" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if !current_user.admin? %>
  <% if @active_session %>
    <%= link_to 'End Session', work_session_end_session_path(work_session_id: @session) ,class:"w3-btn w3-round-xxlarge w3-deep-orange w3-margin"%>
  <% else %>
    <%= link_to 'Start Session', new_work_session_path ,class:"w3-btn w3-round-xxlarge w3-deep-orange w3-margin"%>
  <% end %>
<% end %>